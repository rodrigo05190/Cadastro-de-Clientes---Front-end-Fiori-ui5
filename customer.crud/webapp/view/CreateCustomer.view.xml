<mvc:View
    controllerName="rodrigo606.customer.crud.controller.CreateCustomer"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true"
    height="100%"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page floatingFooter="true">
        <f:SimpleForm
            
            id="edit"
            minWidth="1024"
            maxContainerCols="2"
            layout="ResponsiveGridLayout"
            title="Cadastro de Clientes"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1"
            class="editableForm"
        >
            <f:content>
                <core:Title text="Dados Pessoais" />
                <Input
                    id="CustomerId"
                    visible="false"
                    placeholder=""
                    value="{/CustomerId}"
                    class="customInputSpacing"
                />

                <Input
                    
                    id="AddressId"
                    visible="false"
                    placeholder=""
                    value="{/AddressId}"
                    class="customInputSpacing"
                />

                <Label text="Nome" />
                <Input
                    autocomplete="false"
                    id="FirstName"
                    value="{/FirstName}"
                    placeholder="Nome"
                />
                <Input
                    id="LastName"
                    value="{/LastName}"
                    placeholder="Sobrenome"
                >
                    <layoutData>
                        <l:GridData
                            id="_IDGenGridData1"
                            span="L3 M3 S12"
                        />
                    </layoutData>
                </Input>

                <Label text="Data Nascimento" />
                <DatePicker
                    id="BirthDate"
                    change="handleChange"
                    class="customInputSpacing"
                    placeholder="Data de Nascimento"
                    value="{
                            'path': '/BirthDate',
                            'type': 'sap.ui.model.type.Date',
                            'formatOptions': {
                                'pattern': 'yyyy-MM-dd'
                            }
                        }"
                >
                    <layoutData>
                        <l:GridData
                            id="_IDGenGridData2"
                            span="L10 M10 S12"
                        />
                    </layoutData>
                </DatePicker>
                <Label labelFor="rbg4" text="Genero" />
                <RadioButtonGroup id="rbg4" columns="4"  width="100%">
                    <RadioButton id="rbMaleId" text="Male"  selected="{= ${/Gender} === 'Male'}" />
                    <RadioButton id="rbFemaleId" text="Female" selected="{= ${/Gender} === 'Female'}" />
                </RadioButtonGroup>
                <Label text="Celular" />
                <MaskInput
                    id="PhoneNumber"
                    width="100%"
                    mask="(99) 99999-9999"
                    placeholderSymbol="_"
                    placeholder="Celular"
                    
                    value="{/PhoneNumber}"
                    class="customInputSpacing"
                >
                    <layoutData>
                        <l:GridData
                            id="_IDGenGridData3"
                            span="L10 M10 S12"
                        />
                    </layoutData>
                </MaskInput>
                <Label text="Email" />
                <Input
                    
                    id="Email"
                    placeholder="Email para contato"
                    value="{/Email}"
                    class="customInputSpacing"
                />
                <core:Title text="Dados Moradia" />
                <Label text="Cep" />
                <Input
                    change="onCEPChange"
                    id="PostCode"
                    value="{/PostCode}"
                    placeholder="Digite o cep"
                />
                <Label text="Endereço" />
                <Input
                    
                    id="Street"
                    value="{/Street}"
                    placeholder="R: Vicente"
                />
                <Input
                    id="Neighborhood"
                    value="{/Neighborhood}"
                    placeholder="Bairro"
                />
                <Label text="Cidade" />
                <Input
                    id="City"
                    value="{/City}"
                    placeholder="Cidade"
                />
                <Input
                    id="District"
                    value="{/District}"
                    placeholder="UF"
                />
                <Input
                    id="house_number"
                    value="{/house_number}"
                    placeholder="Número"
                />

                <Label text="Complemento" />
                <Input
                    id="complement"
                    value="{/complement}"
                    placeholder="Nome"
                />
            </f:content>
        </f:SimpleForm>
        <footer>
            <Toolbar>
                <content>
                    <Button
                        type="Accept"
                        text="Salvar"
                        press="onSavePress"

                    />
                    <Button
                        type="Reject"
                        text="Cancelar"
                        press="onNavBack"

                    />
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
