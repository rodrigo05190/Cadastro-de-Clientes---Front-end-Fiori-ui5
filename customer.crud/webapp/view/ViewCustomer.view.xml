<mvc:View
    controllerName="rodrigo606.customer.crud.controller.ViewCustomer"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <HBox
        justifyContent="End"
        class="sapUiSmallMargin"
    >
        <Button
            icon="sap-icon://create"
            text="Novo Cliente"
            press="onPressAdd"
        />
    </HBox>

    <Panel
        busy="{viewModel>/isDataLoading}"
        headerText="Cadastrados"
    >
        <content>
            <List
                items="{/CUSTOMERSet}"
                busy="{viewModel>/isDataLoading}"
            >
                <CustomListItem class="my-list">
                    <f:Card
                        class="sapUiMediumMargin"
                        width="300px"
                    >
                        <f:header>
                            <card:Header
                                title="{FirstName}"
                                subtitle="{LastName}"
                            />
                        </f:header>
                        <f:content>
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <VBox
                                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom "
                                >
                                    <Text
                                        text="{Email}"
                                        class="customInputSpacing"
                                    />
                                    <Text
                                        text="{path: 'BirthDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }}"
                                    />
                                    <Text text="{PhoneNumber}" />
                                </VBox>

                                <HBox justifyContent="End">
                                    <Button
                                        class="sapUiSmallMarginBegin"
                                        press="onPressEdit"
                                        icon="sap-icon://edit"
                                    />
                                    <Button
                                        class="sapUiTinyMarginBegin"
                                        press="onPressDelete"
                                        icon="sap-icon://delete"
                                    />
                                </HBox>
                            </HBox>
                        </f:content>
                    </f:Card>
                </CustomListItem>
            </List>
        </content>
    </Panel>
</mvc:View>
