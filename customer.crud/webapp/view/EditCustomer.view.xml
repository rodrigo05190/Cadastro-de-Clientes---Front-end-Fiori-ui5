<mvc:View
    controllerName="rodrigo606.customer.crud.controller.EditCustomer"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <Page
        busy="{CUSTOMERSet>/isDataLoading}"
        title=""
        showNavButton="true"
        navButtonPress="onNavBack"
        
    >
        <VBox
            justifyContent="Center"
            alignItems="Center"
            xmlns="sap.m"
        >
            <f:Card
                class="sapUiMediumMargin customCard"
                width="100%"
            >
                <f:header>
                    <card:Header
                        title="Favor inserir os dados do Cliente e seu respectivo endereÃ§o"
                        subtitle="Cadastro"
                        iconSrc="sap-icon://customer"
                    />
                </f:header>
                <f:content>
                    <VBox
                        height="100%"
                        class="sapUiMediumMargin"
                        justifyContent="Start"
                        width="100%"
                    >
                        <Input
                            placeholder="Primeiro Nome"
                            value="{FirstName}"
                            class="customInputSpacing"
                        />
                        <Input
                            placeholder="Segundo Nome"
                            value="{LastName}"
                            class="customInputSpacing"
                        />

                        <DatePicker
                            id="DP6"
                            change="handleChange"
                            class="customInputSpacing"
                            placeholder="Data de Nascimento"
                            value="{
                            'path': 'BirthDate',
                            'type': 'sap.ui.model.type.Date',
                            'formatOptions': {
                                'pattern': 'dd-MM-yyyy'
                            }
                        }"
                        />

                        <MaskInput
                            width="100%"
                            mask="(99) 99999-9999"
                            placeholderSymbol="_"
                            placeholder="Celular"
                            showClearIcon="true"
                            value="{PhoneNumber}"
                            class="customInputSpacing"
                        />
                        <Input
                            placeholder="Email para contato"
                            value="{Email}"
                            class="customInputSpacing"
                        />
                        <VBox height="1rem" />

                        <!-- Buttons with FlexBox for spacing -->
                        <FlexBox
                            justifyContent="SpaceBetween"
                            alignItems="Center"
                            width="100%"
                        >
                            <Button
                                text="Cancelar"
                                press="onNavBack"
                                class="sapUiTinyMarginEnd"
                            />
                            <Button
                                text="Salvar"
                                press="onSavePress"
                                type="Emphasized"
                            />
                        </FlexBox>
                    </VBox>
                </f:content>
            </f:Card>
        </VBox>
    </Page>
</mvc:View>
